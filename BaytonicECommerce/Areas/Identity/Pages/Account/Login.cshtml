    <link href="~/css/Login-custom.css" rel="stylesheet" />
    <title>Log in</title>
    <style>
        .login-with-google-btn {
            transition: background-color .3s, box-shadow .3s;
            height: 50px;
            width: 50px;
            padding: 12px 12px 12px 20px;
            border: none;
            border-radius: 3px;
            box-shadow: 0 -1px 0 rgba(0, 0, 0, .04), 0 1px 1px rgba(0, 0, 0, .25);
            color: #757575;
            font-size: 14px;
            font-weight: 500;
            font-family: -apple-system,BlinkMacSystemFont,"Segoe UI",Roboto,Oxygen,Ubuntu,Cantarell,"Fira Sans","Droid Sans","Helvetica Neue",sans-serif;
            background-image: url(data:image/svg+xml;base64,);
            background-color: white;
            background-repeat: no-repeat;
            background-position: 16px 16px;
        }

            .login-with-google-btn:hover {
                box-shadow: 0 4px 5px 0 rgba(40,149,212, 0.2), 0 6px 15px 0 rgba(40,149,212, 0.19);
            }

        .login-with-facebook-btn {
            transition: background-color .3s, box-shadow .3s;
            height: 50px;
            width: 50px;
            padding: 12px 12px 12px 20px;
            border: none;
            border-radius: 3px;
            box-shadow: 0 -1px 0 rgba(0, 0, 0, .04), 0 1px 1px rgba(0, 0, 0, .25);
            color: #757575;
            font-size: 14px;
            font-weight: 500;
            font-family: -apple-system,BlinkMacSystemFont,"Segoe UI",Roboto,Oxygen,Ubuntu,Cantarell,"Fira Sans","Droid Sans","Helvetica Neue",sans-serif;
            background-image: url('~/wwwroot/ClientTemplet/image/BaytonicImgs/facebook_f.png');
            background-color: white;
            background-size:cover;
            background-repeat: no-repeat;
            background-position: 16px 16px;
        }

            .login-with-facebook-btn:hover {
                box-shadow: 0 4px 5px 0 rgba(40,149,212, 0.2), 0 6px 15px 0 rgba(40,149,212, 0.19);
            }
    </style>
</head>
<body>

    <div class="bg-img" style="background-image:url('@Url.Content("~/ClientTemplet/image/catalog/banners/banner10.jpg")');">

        <form id="account" method="post" class="container col-12 col-md-9 col-lg-7 col-xl-6" style="margin-right:100px;border-radius:7px; box-shadow:  0 0 5px #fff, 0 0 5px #fff, 0 0 5px #b8b9b9, 0 0 6px #b8b9b9, 0 0 10px #b8b9b9 ,0 0 15px #b8b9b9;">
            <div class="row d-flex Logcontainer">
                <div class="">
                    <h3 style="text-align: center;">Login</h3>
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-outline mb-2 field">
                        <input asp-for="Input.Email" class="form-control form-control-lg removeborders shadow-none reginput" placeholder=" " required style="font-size: small;" />
                        <label class="form-label reglabel" asp-for="Input.Email">Email</label>
                    </div>

                    <div class="form-outline mb-2 field">
                        <input type="password" asp-for="Input.Password" class="form-control form-control-lg removeborders shadow-none reginput" placeholder=" " required />
                        <label class="form-label reglabel" asp-for="Input.Password">Password</label>
                    </div>
                    <a class=" reglabel" id="forgot-password" asp-page="./ForgotPassword" style="cursor:pointer; float: right;">Forget Password?</a>  <br>

                    <div class="form-check d-flex  mb-2">
                        <input asp-for="Input.RememberMe" class="form-check-input me-2" style="font-size: small;" />
                        <label asp-for="Input.RememberMe" class="form-check-label" style="font-size: small;">
                            Remember me
                        </label>
                    </div>
                    <button type="submit" class="btn">Sign in&nbsp;&nbsp;<i class="fas fa-sign-in"></i></button>
</form><br /><br />
        <div id="seprator">&nbsp; Or Login with &nbsp;</div>
        <div style="display: flex;  justify-content: space-around;">
           
            <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal">
                <div style="display: flex;  justify-content: space-around;">
                    <p>
                        @*<button type="submit" class="login-with-google-btn" name="@Model.ExternalLogins.First()" value="@Model.ExternalLogins.First().Name" title="Log in using your @Model.ExternalLogins.First().DisplayName account" ></button>
        <div class="vl"></div>

        <button type="submit" class="login-with-facebook-btn" name="@Model.ExternalLogins" title="Log in using your @Model.ExternalLogins.Last().DisplayName account"></button>*@

                        @foreach (var provider in Model.ExternalLogins)
                        {
                            @if (provider.Name == "Google")
                            {
                                <button type="submit" class="login-with-google-btn" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account"></button>
                                <div class="vl" style="margin-left:70px"></div>
                            }
                            else
                            {
                                <div style="width:80px"></div>
                                <button type="submit" class="login-with-facebook-btn text-center" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account">
                                    <img height="40" width="40" src="~/ClientTemplet/image/BaytonicImgs/facebook_f.png" style="margin-left:-14px; margin-top:-7px" />
                                </button>

                            }

                        }
                    </p>
                </div>
            </form>


         
        </div><br />
        <div>
            <span style="font-size: small;"> Don't have an account yet?</span>
            <a asp-area="Identity" asp-page="/Account/Register" style="font-size: small;"><br> Sign up for new</a>
        </div>

    </div><span></span>
    
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/2.9.2/umd/popper.min.js"></script>
 
    <script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.1.0/js/bootstrap.min.js"></script>
</body>
