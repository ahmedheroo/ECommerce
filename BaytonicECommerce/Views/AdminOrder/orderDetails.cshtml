@model OrderProductsVM
@{
    ViewData["Title"] = "Order|View";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="container-fluid">
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h5 style="color:gray">Orders</h5>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a asp-action="Index" asp-controller="SysOrder">Orders</a></li>
                        <li class="breadcrumb-item active">Order Products</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>


    <!-- /.card-header -->
    <!-- form start -->
    <div class="row">
        <div class="col-md-3">
            <div class="card card-info">
                <div class="card-header">
                    <h3 class="card-title">@Model.order.Id</h3>

                    <div class="card-tools">
                        <button type="button" class="btn btn-tool" data-card-widget="collapse">
                            <i class="fas fa-minus"></i>
                        </button>
                    </div>
                </div>
                <div class="card-body p-0">
                    <ul class="nav nav-pills flex-column">
                        <li class="nav-item active mt-2 mb-2">
                            <a id="btnOrderDetails" class="nav-link">
                                <i class="fas fa-inbox"></i> Order Details
                            </a>
                        </li>
                        <li class="nav-item  mb-2">
                            <a id="btnOrderProducts" class="nav-link">
                                <i class="far fa-file-alt"></i> Order Products
                                <span class="badge bg-primary float-right">@Model.order.OrderProducts.Count</span>
                            </a>
                        </li>
                    </ul>
                </div>
                <!-- /.card-body -->
            </div>

        </div>
        <div class="col-md-9" id="dvOrderDetails">
            <div class="card card-info">
                <div class="card-header">
                    <h3 class="card-title">Order Details</h3>
                </div>
                <form class="form-horizontal" enctype="multipart/form-data" asp-controller="SysArticle" method="post" asp-action="Edit">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="order.Id">Order No</label>
                                    <input asp-for="order.Id" class="form-control" placeholder="Article English Title" readonly>
                                    <span asp-validation-for="order.Id" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="order.User.UserName">Client</label>
                                    <input asp-for="order.User.UserName" class="form-control" placeholder="Client name" readonly>
                                    <span asp-validation-for="order.User.UserName" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="order.DetailedAddress">Adress</label>
                                    <input asp-for="order.DetailedAddress" class="form-control" placeholder="Order Date" readonly>
                                    <span asp-validation-for="order.DetailedAddress" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="order.User.Email">Client Email</label>
                                    <input asp-for="order.User.Email" class="form-control" readonly>
                                    <span asp-validation-for="order.User.Email" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="order.OrderDate">Order Date</label>
                                        <input asp-for="order.OrderDate" type="date" class="form-control" placeholder="Order Date" readonly>
                                        <span asp-validation-for="order.OrderDate" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="order.DeliveryDate">Delivery Date</label>
                                        <input asp-for="order.DeliveryDate" type="date" class="form-control" placeholder="Delivery Date" readonly>
                                        <span asp-validation-for="order.DeliveryDate" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="order.PaymentTypeId">Payment type</label>
                                        <input asp-for="order.PaymentTypeId" class="form-control" placeholder="Payment type" readonly>
                                        <span asp-validation-for="order.PaymentTypeId" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="order.Discount">Mobile</label>
                                        <input asp-for="order.Discount" class="form-control" placeholder="Discount" readonly>
                                        <span asp-validation-for="order.Discount" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="order.TotalPrice">Invoice</label>
                                        <input asp-for="order.TotalPrice" class="form-control" placeholder="Invoice" readonly>
                                        <span asp-validation-for="order.TotalPrice" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="order.DicountValue">Dicount Value</label>
                                        <input asp-for="order.DicountValue" class="form-control" placeholder="Dicount Value" readonly>
                                        <span asp-validation-for="order.DicountValue" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="order.DiscountCouponId">Discount Coupon</label>
                                        <input asp-for="order.DiscountCouponId" class="form-control" placeholder="Discount Coupon" readonly>
                                        <span asp-validation-for="order.DiscountCouponId" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>Total Price</label>
                                        <input class="form-control" placeholder="Invoice" readonly value="@(Model.order.TotalPrice - Model.order.DicountValue)">
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-2">
                                    <div class="custom-control custom-checkbox mt-5">
                                        <input asp-for="order.Delivered" class="custom-control-input" type="checkbox" readonly>
                                        <label asp-for="order.Delivered" class="custom-control-label">Deliverd</label>
                                        <span asp-validation-for="order.Delivered" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-2">
                                    <div class="custom-control custom-checkbox mt-5">
                                        <input asp-for="order.Paied" class="custom-control-input" type="checkbox" readonly>
                                        <label asp-for="order.Paied" class="custom-control-label">Paied</label>
                                        <span asp-validation-for="order.Paied" class="text-danger"></span>
                                    </div>
                                </div>

                            </div>
                        </div>

                        <!-- /.card-body -->
                        <div class="card-footer">
                            <a asp-action="Index" asp-controller="AdminOrder" class="btn btn-secondary">Back</a>
                        </div>

                        <!-- /.card-footer -->
</form>
            </div>
        </div>
        <div class="col-md-9" id="dvProducts" style="display:none">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Order Details</h3>
                </div>
                @*/.card-header*@
                <div class="card-body">
                    <table id="example1" class="table table-bordered table-striped">
                        <thead class="table-primary">
                            <tr>
                                <th>Product Img</th>
                                <th>Product</th>
                                <th>Unit Price</th>
                                <th>Quantity</th>
                                <th>Sub Tatal</th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.order.OrderProducts)
                            {
                            <tr>
                                <td><img width="100px" height="100px" src="@Url.Content(item.Product.FirstImgUrl)"></td>
                                <td>@item.Product.NameE</td>
                                <td>@item.Product.Price</td>
                                <td>@item.Quantity</td>
                                <td>@(item.Quantity*item.Product.Price)</td>

                            </tr>

                            }
                        </tbody>

                    </table>
                </div>
                <!-- /.card-body -->
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <script>
        $(document).ready(function () {
            $('.custom-file-input').on("change", function () {
                var filelable = $(this).next('.custom-file-label');
                var files = $(this)[0].files;
                if (files.length > 1) {
                    filelable.html(files.length + 'Files selected');
                }
                else if (files.length == 1) {
                    filelable.html(files[0].name);
                }
            });

            $('#btnOrderDetails').on('click', function () {
                $('#dvOrderDetails').show();
                $('#dvProducts').hide();
            });
            $('#btnOrderProducts').on('click', function () {
                $('#dvOrderDetails').hide();
                $('#dvProducts').show();
            });
        });
        $(function () {
            $("#example1").DataTable({
                "responsive": true, "lengthChange": false, "autoWidth": false, "searching": false,
                buttons: [{
                    extend: 'excel',
                    text: ' Export',
                    title: 'Orders Details',
                    className: 'btn btn-sm mr-1',
                    exportOptions: {
                        columns: 'th:not(:last-child)'
                    }
                }, {
                    extend: 'print',
                    text: 'print',
                    title: 'Orders',
                    className: 'btn btn-sm mr-1',
                    exportOptions: {
                        columns: 'th:not(:last-child)'
                    }
                }],
            }).buttons().container().appendTo('#example1_wrapper .col-md-6:eq(0)');
        });

    </script>
}

