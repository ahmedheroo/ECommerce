@model Coupon
@{
    ViewData["Title"] = "Edit Category";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="container-fluid">
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h5 style="color:gray">Edit Coupon</h5>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a asp-action="Index" asp-controller="AdminCoupon">Coupons</a></li>
                        <li class="breadcrumb-item active">Edit Coupon</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <div class="card card-info" style="margin:20px">
        <div class="card-header">
            <h3 class="card-title">Edit Coupon</h3>
        </div>
        <!-- /.card-header -->
        <!-- form start -->
        <form class="form-horizontal" asp-controller="AdminCoupon" method="post" asp-action="Edit">
            <div class="card-body">
                <div class="form-group row">
                    <label asp-for="NameE" class="col-sm-2 col-form-label"> English Name</label>
                    <div class="col-sm-10">
                        <input asp-for="NameE" class="form-control" placeholder="Write English Name of Coupon" required>
                    </div>
                    <span asp-validation-for="NameE" class="text-danger"></span>
                </div>
                <div class="form-group row">
                    <label asp-for="NameA" class="col-sm-2 col-form-label"> Arabic Name</label>
                    <div class="col-sm-10">
                        <input asp-for="NameA" class="form-control" placeholder="Write Arabic Name of Coupon" required>
                    </div>
                    <span asp-validation-for="NameA" class="text-danger"></span>
                </div>
                <div class="form-group row">
                    <label asp-for="Code" class="col-sm-2 col-form-label"> Coupon Code</label>
                    <div class="col-sm-10">
                        <input asp-for="Code" class="form-control" placeholder="Write A Code of Coupon" required>
                    </div>
                    <span asp-validation-for="Code" class="text-danger"></span>
                </div>
                <div class="form-group row">
                    <label asp-for="UpToValue" class="col-sm-2 col-form-label"> Limit Price </label>
                    <div class="col-sm-10">
                        <input asp-for="UpToValue" class="form-control" placeholder="Write order limit Price" required>
                    </div>
                    <span asp-validation-for="UpToValue" class="text-danger"></span>
                </div>
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">Discount persentage </label>
                    <div class="col-sm-9">
                        <input type="number" asp-for="Percent" class="form-control" max="100" min="0" placeholder="Coupon Discount Persentage From 1-100 ">
                    </div>
                    <label class="col-sm-1 col-form-label">% </label>
                    @*<span asp-validation-for="product.Offer" class="text-danger"></span>*@
                </div>
                <div class="form-group row">
                    <div class="custom-control custom-checkbox">
                        <input asp-for="IsActive" class="custom-control-input" type="checkbox" style="margin-right:10px">
                        <label asp-for="IsActive" class="custom-control-label">Active</label>
                        <span asp-validation-for="IsActive" class="text-danger"></span>
                    </div>

                </div>

            </div>


            <!-- /.card-body -->
            <div class="card-footer">
                <button type="submit" class="btn btn-info"> <i class="far fa-save mr-1"></i> Save</button>
                <a asp-action="Index" asp-controller="AdminCoupon" class="btn btn-default float-right">Cancel</a>
            </div>

            <!-- /.card-footer -->
        </form>
    </div>
</div>

