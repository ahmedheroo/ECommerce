@model Category_ParentVM
@{
    ViewData["Title"] = "Create Category";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="container-fluid">
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h5 style="color:gray">Categories</h5>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a asp-action="Index" asp-controller="AdminCategory">Categories</a></li>
                        <li class="breadcrumb-item active">Add New Category</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <div class="card card-info" style="margin:20px">
        <div class="card-header">
            <h3 class="card-title">New Category</h3>
        </div>
        <!-- /.card-header -->
        <!-- form start -->
        <form class="form-horizontal" asp-controller="AdminCategory" method="post" asp-action="Create">
            <div class="card-body">
                <div class="form-group row">
                    <label asp-for="category.NameE" class="col-sm-2 col-form-label"> English Name</label>
                    <div class="col-sm-10">
                        <input asp-for="category.NameE" class="form-control" placeholder="Write English Name of Category" required>
                    </div>
                    <span asp-validation-for="category.NameE" class="text-danger"></span>
                </div>
                <div class="form-group row">
                    <label asp-for="category.NameA" class="col-sm-2 col-form-label"> Arabic Name</label>
                    <div class="col-sm-10">
                        <input asp-for="category.NameA" class="form-control" placeholder="Write Arabic Name of Category" required>
                    </div>
                    <span asp-validation-for="category.NameA" class="text-danger"></span>
                </div>
                <div class="form-group row">
                    @Html.LabelFor(x => Model.category, htmlAttributes: new { @class = "col-sm-2 col-form-label" })
                    <div class="col-sm-10">
                        @Html.DropDownListFor(x => Model.category.ParentId, new SelectList(Model.Categories, "Id", "NameE"), "-- Select One--", htmlAttributes: new { @class = "form-control", id = "CategoryId" })
                    </div>
                    <span asp-validation-for="category.ParentId" class="text-danger"></span>
                </div>
                <div class="form-group row">
                    <div class="custom-control custom-checkbox">
                        <input asp-for="category.ShowInHomePage" class="custom-control-input" type="checkbox" style="margin-right:10px">
                        <label asp-for="category.ShowInHomePage" class="custom-control-label">Show In Home Page</label>
                        <span asp-validation-for="category.ShowInHomePage" class="text-danger"></span>
                    </div>

                </div>
                <div class="form-group row">
                    <div class="custom-control custom-checkbox">
                        <input asp-for="category.IsActive" class="custom-control-input" type="checkbox" style="margin-right:10px">
                        <label asp-for="category.IsActive" class="custom-control-label">Active</label>
                        <span asp-validation-for="category.IsActive" class="text-danger"></span>
                    </div>

                </div>

            </div>


            <!-- /.card-body -->
            <div class="card-footer">
                <button type="submit" class="btn btn-info"> <i class="far fa-save mr-1"></i> Save</button>
                <a asp-action="Index" asp-controller="AdminCategory" class="btn btn-default float-right">Cancel</a>
            </div>

            <!-- /.card-footer -->
        </form>
    </div>
</div>

