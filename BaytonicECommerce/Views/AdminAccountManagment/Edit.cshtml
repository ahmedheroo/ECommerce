@model User_RoleVM
@{
    ViewData["Title"] = "Order|View";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="container-fluid">
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h5 style="color:gray">Admins</h5>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a asp-action="AdminsIndex" asp-controller="AdminAccountManagment">Admins</a></li>
                        <li class="breadcrumb-item active">Edit</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>


    <!-- /.card-header -->
    <!-- form start -->
    <div class="row">
        <div class="col-lg-12">
            <div class="card card-info">
                <div class="card-header">
                    <h3 class="card-title">Admin Data</h3>
                </div>
                <form class="form-horizontal" asp-controller="AdminAccountManagment" method="post" asp-action="Edit">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="User.UserName">User Name</label>
                                    <input asp-for="User.UserName" class="form-control" placeholder="Admin user name">
                                    <span asp-validation-for="User.UserName" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="User.PasswordHash">Password</label>
                                    <input asp-for="User.PasswordHash" type="password" class="form-control" placeholder="Password">
                                    <span asp-validation-for="User.PasswordHash" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="User.Email">Email</label>
                                    <input asp-for="User.Email" type="email" class="form-control" placeholder="xxxx@xxx.com">
                                    <span asp-validation-for="User.Email" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="User.PhoneNumber">Phone</label>
                                    <input asp-for="User.PhoneNumber" class="form-control" placeholder="01xxxxxxxxx">
                                    <span asp-validation-for="User.PhoneNumber" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="SelectedRoleId">Role</label>
                                    @Html.DropDownListFor(x => Model.SelectedRoleId, new SelectList(Model.RoleList, "Id", "Name"), htmlAttributes: new { @class = "form-control", id = "SelectedRoleId" })
                                    <span asp-validation-for="SelectedRoleId" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- /.card-body -->
                    <div class="card-footer">
                       
                        <button type="submit" class="btn btn-info"> <i class="far fa-save mr-1"></i> Save</button>
                        <a asp-action="AdminsIndex" asp-controller="AdminAccountManagment" class="btn btn-default float-right">Cancel</a>
                    </div>

                    <!-- /.card-footer -->
                </form>
            </div>
        </div>

    </div>
</div>
@section Scripts{
    <script>

    </script>
}

