@model Product_Descriptions_CategoriesVM
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="container-fluid">
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h5 style="color:gray">Products</h5>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a asp-action="Index" asp-controller="AdminProduct">Products</a></li>
                        <li class="breadcrumb-item active">Edit Product</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

  
        <!-- /.card-header -->
        <!-- form start -->
    <div class="row">
        <div class="col-md-3">
            <div class="card card-info">
                <div class="card-header">
                    <h3 class="card-title">@Model.product.NameE</h3>

                    <div class="card-tools">
                        <button type="button" class="btn btn-tool" data-card-widget="collapse">
                            <i class="fas fa-minus"></i>
                        </button>
                    </div>
                </div>
                <div class="card-body p-0">
                    <ul class="nav nav-pills flex-column">
                        <li class="nav-item active mt-2 mb-2">
                            <a id="btnArticleDetails" class="nav-link">
                                <i class="fas fa-inbox"></i> Product Details
                            </a>
                        </li>
                        <li class="nav-item  mb-2">
                            <a id="btnParagraphs" class="nav-link">
                                <i class="far fa-file-alt"></i> Product Descriptions
                                <span class="badge bg-primary float-right">@Model.productDescriptions.Count()</span>
                            </a>
                        </li>
                    </ul>
                </div>
                <!-- /.card-body -->
            </div>

        </div>
        <div class="col-md-9" id="dvArticleDetails">
            <div class="card card-info">
                <div class="card-header">
                    <h3 class="card-title">Edit Product</h3>
                </div>
                <!-- /.card-header -->
                <!-- form start -->
                <form class="form-horizontal" enctype="multipart/form-data" asp-controller="AdminProduct" method="post" asp-action="Edit">
                   <input type="hidden" asp-for="product.Id" />
                   <div class="card-body">
                       <div class="form-group row">
                           <label asp-for="product.NameE" class="col-sm-2 col-form-label">English Name</label>
                           <div class="col-sm-10">
                               <input asp-for="product.NameE" class="form-control" placeholder="Product English Name" required>
                           </div>
                           <span asp-validation-for="product.NameE" class="text-danger"></span>
                       </div>
                       <div class="form-group row">
                           <label asp-for="product.NameA" class="col-sm-2 col-form-label">Arabic Name</label>
                           <div class="col-sm-10">
                               <input asp-for="product.NameA" class="form-control" placeholder="Product Arabic Name" required>
                           </div>
                           <span asp-validation-for="product.NameA" class="text-danger"></span>
                       </div>
                       <div class="form-group row">
                           <label asp-for="product.Price" class="col-sm-2 col-form-label"></label>
                           <div class="col-sm-10">
                               <input asp-for="product.Price" class="form-control" placeholder="Price" required>
                           </div>
                           <span asp-validation-for="product.Price" class="text-danger"></span>
                       </div>
                       <div class="form-group row">
                           @Html.LabelFor(x => Model.product.Category, htmlAttributes: new { @class = "col-sm-2 col-form-label" })
                           <div class="col-sm-10">
                               @Html.DropDownListFor(x => Model.product.CategoryId, new SelectList(Model.Categories, "Id", "NameE"), htmlAttributes: new { @class = "form-control", id = "CategoryId" })
                           </div>
                           <span asp-validation-for="product.CategoryId" class="text-danger"></span>
                       </div>
                       <div class="form-group row">
                           <label asp-for="product.Amount" class="col-sm-2 col-form-label">Amount</label>
                           <div class="col-sm-10">
                               <input asp-for="product.Amount" class="form-control" placeholder="Product Amount" required>
                           </div>
                           <span asp-validation-for="product.Amount" class="text-danger"></span>
                       </div>
                       <div class="form-group row">
                           <label asp-for="product.HintE" class="col-sm-2 col-form-label">English Hint</label>
                           <div class="col-sm-10">
                               <input asp-for="product.HintE" class="form-control" placeholder=" Product English Hint" required />

                           </div>
                           <span asp-validation-for="product.HintE" class="text-danger"></span>
                       </div>
                       <div class="form-group row">
                           <label asp-for="product.HintA" class="col-sm-2 col-form-label">Arabic Hint</label>
                           <div class="col-sm-10">
                               <input asp-for="product.HintA" class="form-control" placeholder=" Product Arabic Hint" required />

                           </div>
                           <span asp-validation-for="product.HintA" class="text-danger"></span>
                       </div>
                       <div class="form-group row">
                           <label asp-for="product.LimettedItem" class="col-sm-2 col-form-label">Limetted Item Text</label>
                           <div class="col-sm-10">
                               <input asp-for="product.LimettedItem" class="form-control" placeholder="Limetted Item Text" />

                           </div>
                           <span asp-validation-for="product.LimettedItem" class="text-danger"></span>
                       </div>
                       <div class="form-group row">
                           <label asp-for="product.Queue" class="col-sm-2 col-form-label">Product Queue</label>
                           <div class="col-sm-10">
                               <input asp-for="product.Queue" class="form-control" placeholder="Product Queue" required />

                           </div>
                           <span asp-validation-for="product.Queue" class="text-danger"></span>
                       </div>
                       <div class="form-group row">
                           <label asp-for="product.TagE" class="col-sm-2 col-form-label">English Tags</label>
                           <div class="col-sm-10">
                               <input asp-for="product.TagE" class="form-control" placeholder="Tag1, Tag2, ....." required />

                           </div>
                           <span asp-validation-for="product.TagE" class="text-danger"></span>
                       </div>
                       <div class="form-group row">
                           <label asp-for="product.TagA" class="col-sm-2 col-form-label">Arabic Tags</label>
                           <div class="col-sm-10">
                               <input asp-for="product.TagA" class="form-control" placeholder="Tag1, Tag2, ....." required />

                           </div>
                           <span asp-validation-for="product.TagA" class="text-danger"></span>
                       </div>
                       <div class="form-group row">

                           <label asp-for="formFiles" class="col-sm-2">Product Images</label>

                           <div class="col-sm-10">
                               <div class="custom-file">
                                   <input multiple asp-for="@Model.formFiles" class="custom-file-input" id="customFile" accept="image/x-png,image/gif,image/jpeg,image/jpg" />
                                   <label class="custom-file-label">Choose Product Images</label>
                               </div>

                           </div>
                       </div>
                       <div class="form-group row">
                           <div class="custom-control custom-checkbox">
                               <input asp-for="product.IsTopSeller" class="custom-control-input" type="checkbox" style="margin-right:10px">
                               <label asp-for="product.IsTopSeller" class="custom-control-label">Top Seller</label>
                               <span asp-validation-for="product.IsTopSeller" class="text-danger"></span>
                           </div>

                       </div>
                       <div class="form-group row">
                           <div class="custom-control custom-checkbox">
                               <input asp-for="product.IsActive" class="custom-control-input" type="checkbox" style="margin-right:10px">
                               <label asp-for="product.IsActive" class="custom-control-label">Active</label>
                               <span asp-validation-for="product.IsActive" class="text-danger"></span>
                           </div>

                       </div>
                   </div>



                    <!-- /.card-body -->
                    <div class="card-footer">
                        <button type="submit" class="btn btn-info"> <i class="far fa-save mr-1"></i> Save</button>
                        <a asp-action="Index" asp-controller="AdminProduct" class="btn btn-default float-right">Cancel</a>
                    </div>

                    <!-- /.card-footer -->
                </form>
            </div>
        </div>
        <div class="col-md-9" id="dvParagraphs" style="display:none">
            <div class="card">
                @*<div class="card-header">
                <h3 class="card-title">DataTable with default features</h3>
            </div>*@
                <!-- /.card-header -->
                <div class="card-body">
                    <a asp-action="CreateProductDescription" asp-controller="AdminProduct" asp-route-productID="@Model.product.Id" type="button" class="btn btn-info mb-2" style="float:right;"> <i class="fas fa-plus"></i> New</a>

                    <table id="example1" class="table table-bordered table-striped">
                        <thead class="table-primary">
                            <tr>
                                <th colspan="3">Product English Description</th>
                                
                                <th>#</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.productDescriptions)
                            {
                                <tr>
                                    <td colspan="3">@item.DescriptionE</td>
   
                                    <td>

                                        <a class="nav-link" data-toggle="dropdown" href="#" aria-expanded="false">
                                            <i class="fa fa-ellipsis-h" aria-hidden="true"></i>
                                        </a>
                                        <div class="dropdown-menu" style="">
                                            <a asp-action="EditProductDescription" asp-controller="AdminProduct" asp-route-id="@item.Id" class=" nav-link" tabindex="-1"><i class="fas fa-edit"></i> Edit</a>
                                            <a asp-action="DeleteProductDescription" asp-controller="AdminProduct" asp-route-id="@item.Id" class=" nav-link" tabindex="-1" style="color:red"> <i class="far fa-trash-alt"></i> Delete</a>

                                        </div>

                                    </td>

                                </tr>

                            }
                        </tbody>

                    </table>
                </div>
                <!-- /.card-body -->
            </div>
        </div>
        </div>
    </div>
@section Scripts{
    <script>
        $(document).ready(function () {
            $('.custom-file-input').on("change", function () {
                var filelable = $(this).next('.custom-file-label');
                var files = $(this)[0].files;
                if (files.length > 1) {
                    filelable.html(files.length + 'Files selected');
                }
                else if (files.length == 1) {
                    filelable.html(files[0].name);
                }
            });

            $('#btnArticleDetails').on('click', function () {
                $('#dvArticleDetails').show();
                $('#dvParagraphs').hide();
            });
            $('#btnParagraphs').on('click', function () {
                $('#dvArticleDetails').hide();
                $('#dvParagraphs').show();
            });
        });
    </script>
}

